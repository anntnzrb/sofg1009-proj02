{
  // deno
  "deno.enable": true,
  "deno.lint": true,
  "deno.unstable": false,
  "deno.config": "./front/deno.json",

  // fmt
  "editor.formatOnSave": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },

  "typst-lsp.exportPdf": "never",
  "typst-lsp.rootPath": "./docs"
}
